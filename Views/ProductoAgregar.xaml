<Window x:Class="ProdLogApp.Views.ProductoAgregar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Producción"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0864ac">

    <Window.Resources>
        <!-- Referencia al diccionario de estilos global -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <!-- Definición de filas y columnas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Producto -->
            <RowDefinition Height="Auto"/>
            <!-- Hora Inicio -->
            <RowDefinition Height="Auto"/>
            <!-- Hora Fin -->
            <RowDefinition Height="Auto"/>
            <!-- Cantidad -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Selección del Producto -->
        <Label x:Name="ProductoLabel" Content="Producto:" 
               FontSize="16" FontWeight="Bold" Foreground="#FFFFFF" 
               VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" 
               Margin="0,10,10,10"/>
        <Button Style="{StaticResource ModernButtonStyle}" Content="Seleccionar"
                Grid.Row="0" Grid.Column="1" Margin="0,10,0,10" 
                Click="Seleccionar_Click"/>

        <!-- Hora Inicio -->
        <Label Content="Hora Inicio:" FontSize="14" Foreground="#FFFFFF" 
               VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" 
               Margin="0,10,10,10"/>
        <TextBox x:Name="HoraInicioTextBox" Style="{StaticResource ModernTextBoxStyle}" 
                 Width="300" Height="30" Grid.Row="1" Grid.Column="1" 
                 Margin="0,10,0,10"/>

        <!-- Hora Fin -->
        <Label Content="Hora Fin:" FontSize="14" Foreground="#FFFFFF" 
               VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" 
               Margin="0,10,10,10"/>
        <TextBox x:Name="HoraFinTextBox" Style="{StaticResource ModernTextBoxStyle}" 
                 Width="300" Height="30" Grid.Row="2" Grid.Column="1" 
                 Margin="0,10,0,10"/>

        <!-- Cantidad Producida -->
        <Label Content="Cantidad Producida:" FontSize="14" Foreground="#FFFFFF" 
               VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" 
               Margin="0,10,10,10"/>
        <TextBox x:Name="CantidadTextBox" Style="{StaticResource ModernTextBoxStyle}" 
                 Width="300" Height="30" Grid.Row="3" Grid.Column="1" 
                 Margin="0,10,0,10"/>

        <!-- Botones Confirmar y Cancelar -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" 
                    Grid.Row="4" Grid.ColumnSpan="2" Margin="132,40,0,-20">
            <Button Style="{StaticResource ConfirmButtonStyle}" Content="Confirmar" 
                    Margin="10" Click="Confirmar_Click"/>
            <Button Style="{StaticResource CancelButtonStyle}" Content="Cancelar" 
                    Margin="10" Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
