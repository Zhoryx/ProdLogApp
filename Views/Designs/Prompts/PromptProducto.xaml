<Window x:Class="ProdLogApp.Views.Designs.Prompts.PromptProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Seleccionar Producto"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0864AC">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Designs/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <!-- Filtros -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0,0,0,10">

            <Label Content="Buscar por Código:" FontSize="14" Foreground="White"/>
            <TextBox x:Name="SearchBoxID" Width="250" Height="40" Style="{StaticResource BaseTextBoxStyle}" 
                     TextChanged="SearchBoxID_TextChanged"/>

            <Label Content="Buscar por nombre:" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="NombreTextBox"
                     Width="250"
                     Height="40"
                     Style="{StaticResource BaseTextBoxStyle}"
                     Margin="0,0,0,10"
                     TextChanged="NombreTextBox_TextChanged"/>

            <Label Content="Buscar por Categoria:" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="CategoriaTextBox"
                     Width="250"
                     Height="40"
                     Style="{StaticResource BaseTextBoxStyle}"
                     TextChanged="CategoriaTextBox_TextChanged"/>
        </StackPanel>

        <!-- Lista de productos -->
        <Border Style="{StaticResource ShadowBorderStyle}"
                Padding="10"
                Margin="280,0,0,80"
                HorizontalAlignment="Left"
                Width="530">
            <ListView x:Name="ProductList"
          SelectionMode="Single"
          MouseDoubleClick="Product_list_MouseDoubleClick"
          KeyDown="Product_list_KeyDown"
          FontSize="16"
          Margin="0,10,0,10">

                <ListView.View>
                    <GridView>

                        <!-- Código del producto -->
                        <GridViewColumn Width="100"
                            DisplayMemberBinding="{Binding Id}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Código"
                                          Tag="Id"
                                          Click="GridViewColumnHeader_Click"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <!-- Nombre del producto -->
                        <GridViewColumn Width="300"
                            DisplayMemberBinding="{Binding Nombre}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Producto"
                                          Tag="Nombre"
                                          Click="GridViewColumnHeader_Click"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <!-- Categoría (nombre de la categoría asociada) -->
                        <GridViewColumn Width="250"
                            DisplayMemberBinding="{Binding CategoriaNombre}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Categoría"
                                          Tag="CategoriaNombre"
                                          Click="GridViewColumnHeader_Click"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>

        </Border>

        <!-- Botones de acción -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,20">
            <Button x:Name="ConfirmButton"
                    Content="Confirmar"
                    Style="{StaticResource ConfirmButtonStyle}"
                    Width="120"
                    Click="ConfirmButton_Click"/>

            <Button x:Name="CancelButton"
                    Content="Cancelar"
                    Style="{StaticResource CancelButtonStyle}"
                    Width="120"
                    Margin="10,0,0,0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
