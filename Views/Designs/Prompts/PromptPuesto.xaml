<Window x:Class="ProdLogApp.Views.Designs.Prompts.PromptPuesto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Seleccionar Puesto"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0864AC">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Designs/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <!-- ==================== BUSCADORES ==================== -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10,10,0,322">
            <Label Content="Buscar por nombre:" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="searchbox"
                     Width="250" Height="40"
                     Style="{StaticResource BaseTextBoxStyle}"
                     TextChanged="searchbox_TextChanged"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10,100,0,250">
            <Label Content="Buscar por código:" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="searchboxid"
                     Width="250" Height="40"
                     Style="{StaticResource BaseTextBoxStyle}"
                     TextChanged="searchboxid_TextChanged"/>
        </StackPanel>

        <!-- ==================== MENSAJE VACÍO ==================== -->
        <TextBlock x:Name="EmptyMessage"
                   Text="No se encontraron puestos disponibles."
                   Visibility="Collapsed"
                   Foreground="Gray"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,180,0,0"/>

        <!-- ==================== LISTA DE PUESTOS ==================== -->
        <Border Style="{StaticResource ShadowBorderStyle}" Padding="10" Margin="300,0,0,70" HorizontalAlignment="Left" Width="520">
            <ListView x:Name="PositionList"
                      SelectionMode="Single"
                      SelectionChanged="PositionList_SelectionChanged"
                      MouseDoubleClick="Position_list_MouseDoubleClick"
                      KeyDown="Position_list_KeyDown"
                      FontSize="16">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="80" DisplayMemberBinding="{Binding PuestoId}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Código"
                                                      Tag="PuestoId"
                                                      Click="GridViewColumnHeader_Click"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="400" DisplayMemberBinding="{Binding Nombre}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Nombre del Puesto"
                                                      Tag="Nombre"
                                                      Click="GridViewColumnHeader_Click"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- ==================== BOTONES ==================== -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="10,0,0,10">
            <Button x:Name="ConfirmButton"
                    Content="Confirmar"
                    Style="{StaticResource ConfirmButtonStyle}"
                    Width="150"
                    Margin="10"
                    Click="ConfirmButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="Cancelar"
                    Style="{StaticResource CancelButtonStyle}"
                    Width="150"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
