<Window x:Class="ProdLogApp.Views.Designs.Prompts.PromptPosition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ProdLogApp.Views.Designs.Prompts"
        mc:Ignorable="d"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0864AC"
        Title="PromptPosition">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Designs/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">

        <!-- 🔍 Buscar por nombre -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10,10,0,322">
            <Label Content="Buscar por nombre:" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="searchbox" Width="250" Height="40" Style="{StaticResource BaseTextBoxStyle}" 
                     TextChanged="searchbox_TextChanged"/>
        </StackPanel>

        <!-- 🔍 Buscar por código -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10,98,0,251">
            <Label Content="Buscar por código:" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="searchboxid" Width="250" Height="40" Style="{StaticResource BaseTextBoxStyle}" 
                     TextChanged="searchboxid_TextChanged"/>
        </StackPanel>

        <!-- 🪄 Mensaje si la lista está vacía -->
        <TextBlock x:Name="EmptyMessage" Text="No se encontraron puestos disponibles."
                   Visibility="Collapsed" Foreground="Gray" FontStyle="Italic"
                   HorizontalAlignment="Center" Margin="0,5,0,10"/>

        <!-- 📋 Lista de puestos -->
        <ListView x:Name="PositionList" SelectionMode="Single"
                  SelectionChanged="PositionList_SelectionChanged"
                  MouseDoubleClick="Position_list_MouseDoubleClick"
                  KeyDown="Position_list_KeyDown" Margin="358,10,0,18" FontSize="16">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="80" DisplayMemberBinding="{Binding PuestoId}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Código" Click="GridViewColumnHeader_Click" Tag="PuestoId"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>

                    <GridViewColumn Width="400" DisplayMemberBinding="{Binding Nombre}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Nombre del Puesto" Click="GridViewColumnHeader_Click" Tag="Nombre"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>


        <!-- ✅ Botones de acción -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10">
            <Button x:Name="ConfirmButton" Content="Confirmar" Style="{StaticResource ConfirmButtonStyle}" Width="150" Margin="10" Click="ConfirmButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancelar" Style="{StaticResource CancelButtonStyle}" Width="150" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
