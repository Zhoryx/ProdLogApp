<Window x:Class="ProdLogApp.Views.ManagerMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdLogApp.Views"
        mc:Ignorable="d"
        Title="Menu - Producciones"
        Height="625"
        Width="786"
        WindowStartupLocation="CenterScreen"
        Background="#0864ac"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Referencia al archivo Styles.xaml -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Designs/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Sombra suave para los paneles -->
            <Style x:Key="ShadowBorderStyle" TargetType="Border">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid HorizontalAlignment="Center" Width="312" Margin="0,0,0,35">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Botones Gestion -->
        <StackPanel VerticalAlignment="Top" Margin="10,27,0,0" Height="539" HorizontalAlignment="Left" Width="280" Grid.ColumnSpan="2">
            <Button Style="{StaticResource ModernButtonStyle}" Content="Partes Diarios" Margin="0,5,0,40" Height="50" Width="250" Click="AbrirPartesDiarios"/>
            <Button Style="{StaticResource ModernButtonStyle}" Content="Gestionar Productos" Margin="0,5,0,40" Height="50" Width="250" Click="MaestroProducto"/>
            <Button Style="{StaticResource ModernButtonStyle}" Content="Gestionar Categoria" Margin="0,5,0,40" Height="50" Width="250" Click="MaestroCategoria"/>
            <Button Style="{StaticResource ModernButtonStyle}" Content="Gestionar Puestos" Margin="0,5,0,40" Height="50" Width="250" Click="MaestroPuesto"/>
            <Button Style="{StaticResource ModernButtonStyle}" Content="Gestionar Usuarios" Margin="0,5,0,40" Height="50" Width="250" Click="MaestroUsuario"/>
            <Button Style="{StaticResource CancelButtonStyle}" Content="Desconectar" Height="50" Width="250"/>
        </StackPanel>
    </Grid>
</Window>
