<Window x:Class="ProdLogApp.Views.AgregarCategoria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar / Editar Categoría"
        Height="260"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0864ac">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Designs/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Atajos: Enter = Confirmar, Esc = Cancelar -->
    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{x:Static ApplicationCommands.NotACommand}" CommandParameter="{x:Null}" />
        <KeyBinding Key="Escape" Command="{x:Static ApplicationCommands.NotACommand}" CommandParameter="{x:Null}" />
    </Window.InputBindings>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Label -->
            <RowDefinition Height="Auto"/>
            <!-- TextBox -->
            <RowDefinition Height="Auto"/>
            <!-- CheckBox Activo -->
            <RowDefinition Height="*"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Label -->
        <Label Content="Nombre de la categoría"
               FontSize="14" Foreground="#FFFFFF"
               HorizontalAlignment="Left" Margin="0,0,0,6" Grid.Row="0"/>

        <!-- TextBox -->
        <TextBox x:Name="NombreCategoriaTextBox"
                 Style="{StaticResource BaseTextBoxStyle}"
                 Height="40" Margin="0,0,0,10"
                 VerticalContentAlignment="Center"
                 HorizontalAlignment="Stretch"
                 Grid.Row="1"
                 TabIndex="0"/>

        <!-- CheckBox Activo -->
        <CheckBox x:Name="ActivoCheckBox"
                  Content="Activo"
                  IsChecked="True"
                  Foreground="#FFFFFF"
                  Margin="0,0,0,10"
                  Grid.Row="2"
                  TabIndex="1"/>

        <!-- Botones -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Style="{StaticResource ConfirmButtonStyle}"
                    Content="Confirmar"
                    Width="120" Height="40" Margin="10"
                    Click="Confirmar_Click"
                    IsDefault="True"
                    TabIndex="2"/>
            <Button Style="{StaticResource CancelButtonStyle}"
                    Content="Cancelar"
                    Width="120" Height="40" Margin="10"
                    Click="Cancelar_Click"
                    IsCancel="True"
                    TabIndex="3"/>
        </StackPanel>
    </Grid>
</Window>
