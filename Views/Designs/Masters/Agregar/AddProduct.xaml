<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="av"
    x:Class="ProdLogApp.Views.ProductoAgregar"
    Title="Agregar Producción"
    Height="540"
    Width="552"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    Background="#0864ac">

    <Window.Resources>
        <!-- Referencia al diccionario de estilos global -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Designs/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <!-- Definición de filas y columnas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Etiqueta Categoría -->
        <Label Content="Categoría:" FontSize="14" Foreground="White" 
               Grid.Row="0" HorizontalAlignment="Left" Margin="10,10,0,0"/>

        <!-- ComboBox para categorías -->
        <ComboBox x:Name="ComboBoxCategorias" 
                  Style="{StaticResource ModernComboBoxStyle}" 
                  Width="300" Height="35" 
                  Grid.Row="1" HorizontalAlignment="Left" Margin="10,5,0,0"/>

        <!-- Etiqueta Nombre -->
        <Label Content="Nombre:" FontSize="14" Foreground="White" 
               Grid.Row="2" HorizontalAlignment="Left" Margin="10,10,0,0"/>

        <!-- TextBox para ingresar el nombre del producto -->
        <TextBox x:Name="NombreProducto" 
                 Style="{StaticResource ModernTextBoxStyle}" 
                 Width="300" 
                 Grid.Row="3" HorizontalAlignment="Left" Margin="10,25,0,301"/>

        <!-- Botones Confirmar y Cancelar -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="3" Margin="206,168,0,132">
            <Button Style="{StaticResource ConfirmButtonStyle}" Content="Confirmar" 
                    Width="120" Height="40" Margin="10" Click="Confirmar_Click"/>
            <Button Style="{StaticResource CancelButtonStyle}" Content="Cancelar" 
                    Width="120" Height="40" Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
