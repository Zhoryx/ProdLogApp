<Window
    x:Class="ProdLogApp.Views.AddProduct"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Agregar Producto"
    Loaded="Window_Loaded"
    Height="400"
    Width="500"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    Background="#0864AC">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Designs/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Contenedor principal como en ProductionForm -->
    <StackPanel Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Center">

        <!-- Grupo: Categoría -->
        <GroupBox Header="Categoría" Foreground="White" Margin="0,0,0,10" BorderThickness="0.5">
            <StackPanel>
                <Button Content="Seleccionar Categoría"
                        Style="{StaticResource ModernButtonStyle}"
                        Width="165"
                        Margin="0,0,0,5"
                        Click="SeleccionarProducto_Click"/>
                <!-- Mostramos la selección en un TextBox readonly, igual que en ProductionForm -->
                <TextBox x:Name="CategoriaTextBox"
                         Style="{StaticResource BaseTextBoxStyle}"
                         IsReadOnly="True"
                         Text="Seleccionada: Ninguna"/>
            </StackPanel>
        </GroupBox>

        <!-- Grupo: Nombre del Producto -->
        <GroupBox Header="Nombre del Producto" Foreground="White" Margin="0,0,0,20" BorderThickness="0.5">
            <TextBox x:Name="NombreProducto"
                     Style="{StaticResource BaseTextBoxStyle}"
                     Height="40"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Stretch"/>
        </GroupBox>

        <!-- Botones alineados a la derecha como en ProductionForm -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnConfirmar"
                    Content="Confirmar"
                    Style="{StaticResource ConfirmButtonStyle}"
                    Width="120"
                    Margin="10"
                    IsDefault="True"
                    Click="Confirmar_Click"/>
            <Button Content="Cancelar"
                    Style="{StaticResource CancelButtonStyle}"
                    Width="120"
                    Margin="10"
                    IsCancel="True"
                    Click="Cancelar_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
