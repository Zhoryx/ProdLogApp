<Window x:Class="ProdLogApp.Views.PositionAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Puesto"
        Height="250"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0864ac">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Designs/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Label -->
        <Label Content="Nombre Puesto" FontSize="14" Foreground="#FFFFFF"
               Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" HorizontalAlignment="Left"/>

        <!-- TextBox -->
        <TextBox x:Name="namepos" Style="{StaticResource BaseTextBoxStyle}"
                 Grid.Row="1" Grid.Column="1"
                 Height="40" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"
                 Margin="0,0,0,10"/>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal"
            HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Style="{StaticResource ConfirmButtonStyle}" Content="Confirmar"
            Margin="10" Height="40" Click="Confirmar_Click"/>
            <Button Style="{StaticResource CancelButtonStyle}" Content="Cancelar"
            Margin="10" Height="40" Click="Cancelar_Click"/>
        </StackPanel>

    </Grid>
</Window>
