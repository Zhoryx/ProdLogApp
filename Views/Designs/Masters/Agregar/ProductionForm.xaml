<Window x:Class="ProdLogApp.Views.ProductionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Producción"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0864ac">

    <Window.Resources>
        <!-- Referencia al diccionario de estilos global -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Designs/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10,0,0,-2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Producto -->
            <RowDefinition Height="Auto"/>
            <!-- Puesto -->
            <RowDefinition Height="Auto"/>
            <!-- Hora Inicio + Hora Fin -->
            <RowDefinition Height="Auto"/>
            <!-- Cantidad -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Producto -->
        <Label Content="Producto:" FontSize="16" Foreground="White"
           Grid.Row="0" Grid.Column="0" Margin="0,20,10,0"/>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Margin="118,10,26,73" Grid.RowSpan="2">
            <Button Content="Seleccionar" Style="{StaticResource ModernButtonStyle}"
                Height="25" Width="120"
                Click="SeleccionarProducto_Click"/>
            <TextBox x:Name="ProductoTextBox" Style="{StaticResource ModernTextBoxStyle}" IsReadOnly="True" Width="395"/>
        </StackPanel>

        <!-- Puesto -->
        <Label Content="Puesto:" FontSize="16" Foreground="White"
           Grid.Row="1" Grid.Column="0" Margin="46,39,32,10"/>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="118,19,26,39" Grid.RowSpan="2">
            <Button Content="Seleccionar" Style="{StaticResource ModernButtonStyle}"
                Height="25" Width="120"
                Click="SeleccionarPuesto_Click"/>
            <TextBox x:Name="PuestoTextBox" Style="{StaticResource ModernTextBoxStyle}" IsReadOnly="True" Width="387"/>
        </StackPanel>

        <!-- Hora Inicio y Hora Fin -->
        <Label Content="Hora Inicio:" FontSize="14" Foreground="White"
           Grid.Row="2" Grid.Column="0" Margin="40,10,26,0"/>
        <TextBox x:Name="HoraInicioTextBox" Style="{StaticResource ModernTextBoxStyle}"
             Grid.Row="2" Grid.Column="1" Margin="0,10,72,0"/>

        <Label Content="Hora Fin:" FontSize="14" Foreground="White"
           Grid.Row="2" Grid.Column="1" Margin="175,14,58,39" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBox x:Name="HoraFinTextBox" Style="{StaticResource ModernTextBoxStyle}"
             Grid.Row="2" Grid.Column="2" Margin="22,10,58,0"/>

        <!-- Cantidad -->
        <Label Content="Cantidad Producida:" FontSize="14" Foreground="White"
           Grid.Row="3" Grid.Column="0" Margin="0,10,10,0"/>
        <TextBox x:Name="CantidadTextBox" Style="{StaticResource ModernTextBoxStyle}"
             Grid.Row="3" Grid.ColumnSpan="3" Margin="140,10,71,85" Grid.RowSpan="2"/>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="3"
                HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Confirmar" Style="{StaticResource ConfirmButtonStyle}"
                Width="120" Margin="10" Click="Confirmar_Click"/>
            <Button Content="Cancelar" Style="{StaticResource CancelButtonStyle}"
                Width="120" Margin="10" Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>


</Window>
