<Window x:Class="ProdLogApp.Views.UserManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdLogApp.Views"
        mc:Ignorable="d"
        Title="Menu - Producciones"
        Height="720"
        Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="#0864AC"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Reference to Styles.xaml -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Designs/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Soft shadow effect for panels -->
            <Style x:Key="ShadowBorderStyle" TargetType="Border">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid HorizontalAlignment="Left" Width="1080">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left-side grid displaying user data -->
        <Border Background="#E6F0FA" Style="{StaticResource ShadowBorderStyle}" Padding="30" Margin="10,0,10,0" VerticalAlignment="Center" Height="586">
            <ListView x:Name="Users_list" SelectionMode="Single" SelectionChanged="Users_list_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Name}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Nombre" Click="GridViewColumnHeader_Click" Tag="Nombre"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Dni}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="DNI" Click="GridViewColumnHeader_Click" Tag="DNI"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding ManagementStatus}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Es Gerente" Click="GridViewColumnHeader_Click" Tag="Gerente"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding FIngreso}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Fecha Ingreso" Click="GridViewColumnHeader_Click" Tag="FIngreso"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

        </Border>

        <!-- CRUD Buttons -->
        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="6,195,14,0" Height="405">
            <Button Style="{StaticResource ModernButtonStyle}" Content="Agregar" Margin="0,5,0,50" Height="50" Width="250" Click="AddUser_Click"/>
            <Button Style="{StaticResource ModernButtonStyle}" Content="Modificar" Margin="0,5,0,50" Height="50" Width="250" Click="ModifyUser_Click"/>
            <Button Style="{StaticResource ModernButtonStyle}" Content="Activar/Desactivar" Margin="0,5,0,50" Height="50" Width="250" Click="ToggleUserStatus_Click"/>
            <Button Style="{StaticResource ModernButtonStyle}" Content="Volver" Margin="10" Click="ReturnToMenu_Click"/>
        </StackPanel>
    </Grid>
</Window>
