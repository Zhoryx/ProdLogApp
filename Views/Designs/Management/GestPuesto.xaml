<Window x:Class="ProdLogApp.Views.GestPuesto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdLogApp.Views"
        mc:Ignorable="d"
        Title="Menu - Puestos"
        Height="720"
        Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="#0864AC"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Reference to Styles.xaml -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Designs/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Soft shadow effect for panels -->
            <Style x:Key="ShadowBorderStyle" TargetType="Border">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid HorizontalAlignment="Left" Width="1080">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left-side grid displaying position data -->
        <Border Background="#E6F0FA" Style="{StaticResource ShadowBorderStyle}" Padding="30" Margin="10,0,10,0" VerticalAlignment="Center" Height="586">
            <ListView x:Name="Positions" FontSize="16"
                MouseDoubleClick="Positions_list_MouseDoubleClick"
                KeyDown="Positions_list_KeyDown">
                <ListView.View>
                    <GridView>
                        <!-- 🔵 Código (PuestoId) -->
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding PuestoId}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Código"
                                  Click="GridViewColumnHeader_Click"
                                  Tag="PuestoId"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <!-- Puesto -->
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Nombre}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Puesto"
                                  Click="GridViewColumnHeader_Click"
                                  Tag="Nombre"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <!-- Activo -->
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding EstadoActivo}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="Activo"
                                  Click="GridViewColumnHeader_Click"
                                  Tag="EstadoActivo"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView>

                </ListView.View>
            </ListView>
        </Border>

        <!-- CRUD Buttons -->
        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="6,168,14,0" Height="383">
            <Button Style="{StaticResource ModernButtonStyle}" Content="Agregar" Margin="0,5,0,50" Height="50" Width="250" Click="AddPosition"/>
            <Button Style="{StaticResource ModernButtonStyle}" Content="Modificar" Margin="0,5,0,50" Height="50" Width="250" Click="ModifyPosition"/>
            <Button Style="{StaticResource ModernButtonStyle}" Content="Activar/Desactivar" Margin="0,5,0,50" Height="50" Width="250" Click="DeletePosition"/>
            <Button Style="{StaticResource ModernButtonStyle}" Content="Volver" Margin="10" Click="ReturnToMenu"/>
        </StackPanel>
    </Grid>
</Window>
