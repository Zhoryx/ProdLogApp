<Window x:Class="ProdLogApp.Views.PasswordRequest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdLogApp.Views"
        mc:Ignorable="d"
        Title="Seguridad"
        Height="250"
        Width="600"
        Background="#0067AC"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Referencia al diccionario de estilos globales -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>

           
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- Contenedor central -->
        <Border Background="#E6F0FA"
                CornerRadius="15"
                Padding="30"
                Width="500"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Effect="{StaticResource DropShadow}" 
                Height="160">

            <StackPanel Height="147" Width="448" Margin="-4,-17,-4,-30">
                <!-- Mensaje de texto -->
                <TextBlock Text="Esta Acción Requiere Permisos de Administrador"
                           FontSize="14"
                           FontWeight="DemiBold"
                           TextAlignment="Center"
                           Foreground="#333"
                           TextWrapping="Wrap"
                           Height="30"
                           Width="404"/>

                <!-- Caja de texto para contraseña -->
                <TextBox x:Name="txtPassword"
                         Text="Escriba Contraseña Aquí..."
                         Style="{StaticResource RoundedTextBox}"
                         TextAlignment="Center"
                         Width="300"
                         Height="35"
                         TextChanged="txtPassword_TextChanged"/>

                <!-- Botones de Confirmar y Cancelar -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="62">
                    <Button Content="Confirmar"
                            Style="{StaticResource ConfirmButtonStyle}"
                            Click="Confirmar"
                            Margin="0,10,10,0"/>
                    <Button Content="Cancelar"
                            Style="{StaticResource CancelButtonStyle}"
                            Click="Cancelar"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
