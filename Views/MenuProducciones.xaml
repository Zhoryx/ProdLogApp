<Window x:Class="ProdLogApp.Views.MenuProducciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdLogApp.Views"
        mc:Ignorable="d"
        Title="Menu - Producciones"
        Height="720"
        Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="#0864ac"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Botón moderno con hover y estilo minimalista -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <!-- Fondo blanco limpio -->
            <Setter Property="Foreground" Value="#0864ac"/>
            <!-- Azul acorde al fondo -->
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="BorderBrush" Value="#0864ac"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0864ac"/>
                    <!-- Fondo azul al pasar el ratón -->
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                    <!-- Texto blanco para contraste -->
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="15" Color="Black" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Sombra suave para los paneles -->
        <Style x:Key="ShadowBorderStyle" TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Grilla a la izquierda -->
        <Border Background="#FFFFFF" Style="{StaticResource ShadowBorderStyle}" Padding="30" Margin="10,0,10,0" VerticalAlignment="Center" Height="586">
            <ListView x:Name="Producciones">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" Header="Producto" DisplayMemberBinding="{Binding Producto}" />
                        <GridViewColumn Width="Auto" Header="Cantidad" DisplayMemberBinding="{Binding Cantidad}" />
                        <GridViewColumn Width="Auto" Header="⏰ Hora Inicio" DisplayMemberBinding="{Binding HInicio, StringFormat='HH:mm'}" />
                        <GridViewColumn Width="Auto" Header="⏳ Hora Fin" DisplayMemberBinding="{Binding HFin, StringFormat='HH:mm'}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Botones CRUD Arriba -->
        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="24,202,-4,0" Height="286">
            <Button Style="{StaticResource ModernButtonStyle}" Content="Agregar" Margin="0,5,0,50"/>
            <Button Style="{StaticResource ModernButtonStyle}" Content="Eliminar" Margin="0,5,0,50"/>
            <Button Style="{StaticResource ModernButtonStyle}" Content="Modificar" Margin="0,5,0,50"/>
        </StackPanel>

        <!-- Botones Confirmar y Cancelar Abajo -->
        <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,10,10,10">
            <Button Style="{StaticResource ModernButtonStyle}" Content="Confirmar" Margin="10,5,10,5"/>
            <Button Style="{StaticResource ModernButtonStyle}" Background="#DC3545" Content="Cancelar" Margin="10,5,10,5"/>
        </StackPanel>
    </Grid>
</Window>
